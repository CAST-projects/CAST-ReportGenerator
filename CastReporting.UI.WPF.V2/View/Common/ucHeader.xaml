<UserControl x:Class="CastReporting.UI.WPF.Core.Common.UcHeader"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:common="clr-namespace:CastReporting.UI.WPF.Core.Common"
             xmlns:vm="clr-namespace:CastReporting.UI.WPF.Core.ViewModel"
             d:DataContext="{d:DesignInstance vm:ReportingVM, IsDesignTimeCreatable=False}"
             mc:Ignorable="d" Width="auto" Height="70">


    <DockPanel Background="#FF343434">
        <common:Menu />
        <Label Foreground="#4C000000" FontSize="32" Margin="0,22,10,23" Height="25" Width="308" HorizontalAlignment="Left" VerticalAlignment="Center">
            <Label.Background>
                <ImageBrush ImageSource="/CastReporting.UI.WPF.Core;component/Resources/Images/rg-title.png"
					RenderOptions.BitmapScalingMode="NearestNeighbor"
					RenderOptions.EdgeMode="Aliased"/>
            </Label.Background>
        </Label>
    </DockPanel>
</UserControl>
